{
    "name": "抖音插件",
    "description": "调整抖音直播画面样式，根据关键字过滤聊天内容",
    "version": "0.1.2",
    "manifest_version": 3,
    "icons": {
        "128": "assets/favicon.ico"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_title": "Vue Popup",
        "default_icon": "assets/favicon.ico"
    },
    "content_scripts": [
        {
            "matches": [
                "*://live.douyin.com/*"
            ],
            "js": [
                "content-scripts/live-douyin.js"
            ],
            "css":["assets/live-douyin.3b9e74e3.css "]
        }
    ]
}